<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   
    
                 
                          
                                                                           
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:tag="layout/item_search_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="@dimen/dimen8"
            android:tag="binding_1"                 
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline13"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:shape_mode="round_rect" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.34" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/blackcolor"
            app:layout_constraintTop_toTopOf="@+id/image"
            app:srcCompat="@drawable/ic_row_forward_24" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:text=""
            android:tag="binding_2"         
            android:fontFamily="@font/almari_regular"
            android:textSize="@dimen/sp14"
            android:textColor="@color/v_ramady_dark"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintEnd_toStartOf="@+id/imageView26"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="@+id/image" />


    </androidx.constraintlayout.widget.ConstraintLayout>
         